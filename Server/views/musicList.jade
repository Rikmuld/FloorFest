mixin music(name, id, text)
    .musicContainer
        .thumbnail.musicBox
            img(src="/image/" + id + ".jpg" alt=name)
            .caption.alCenter
                h3= name
                p= text
                button.btn.btn-default.btn-play(type="button" onclick="javascript:playMusic('" + id + "')") Play Now!

.container-fluid#musicList
    #musicWrapper
        +music("Let It Go", "frozen", "Idina Menzel")
        +music("Canon in D", "testMusic", "Johann Pachelbel")