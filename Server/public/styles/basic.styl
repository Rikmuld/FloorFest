@import 'helper.styl'
@import 'global.styl'

body, html
	height 100%

::-webkit-scrollbar              { /* 1 */ }
::-webkit-scrollbar-button       { /* 2 */ }
::-webkit-scrollbar-track        { /* 3 */ }
::-webkit-scrollbar-track-piece  { /* 4 */ }
::-webkit-scrollbar-thumb        { /* 5 */ }
::-webkit-scrollbar-corner       { /* 6 */ }
::-webkit-resizer                { /* 7 */ }

.navBl
	color white
	font-family: exo;
	font-size 30px
	i
		font-size 28px
	.head
		float:left
	.tail
		float:right	

.musicBox
	width:200px
	white-space normal

.coverbox
	background-repeat no-repeat
	background-position 50%
	background-size cover
	height 100%
	width 100%

.exo
	font-family:exo

.musicCover
	width 300px
	height 300px
	border-radius 10px

.musicDisplay
	width 100%
	td
		width 50%

.musicContainer
	padding 10px 10px 0px 10px
	float:left
	@extends .exo

#musicWrapper
	width:1340px

#musicList
	@extends .yAlign
	overflow-x: scroll;
	overflow-y: hidden;
	white-space: nowrap;
	width: 100%;
	-webkit-overflow-scrolling: touch;

.btn-play
	width: 175px
	height: 50px
	trans(0.2s)

#musicProg
	position: absolute
	width 100%
	height 24px
	top:50px
	border-bottom 4px solid #1A65D6
	background repeating-linear-gradient(45deg, #A8AEB7, #C7C7C7 30px);

#musicProg-bar
	@extends #musicProg
	width: 0%
	background repeating-linear-gradient(45deg, #d8dfeb, #ffffff 30px);

#headerIcon
	margin-left 15px

.headerLink, .headerLink:focus, .headerLink:active
	color white

.headerLink:hover
	color #ddd
	trans(0.2s)

#header
	height 50px
	width 100%
	background-color #333
	border-bottom 4px solid #1A65D6
	padding 4px 10px 4px 10px

#content
	height calc(100% - 50px)
	width: 100%

#landscape, #portrait
	height 100%
	width: 100%

.centerbox
	@extends .alCenter
	@extends .yAlign
	@extends .center
	width 75%

#accessText
	font-size 32px
	font-family exo
	color: #222

#playerText
	margin-bottom 30px
	@extends #accessText

.playerSelect {
	margin-left auto
	margin-right auto
	width: 480px
    height: 150px
}

.btnPlayer
	padding-left 5px
	padding-right 5px
	float: left;
	.btn
		width 150px
		height 150px
		border-radius 15px
		font-family exo
		font-size 28px
		border-color #505050
	.btn:hover
		trans(0.2s)
		background-color #EE

.turnDevice
	width 100%
	height 100%
	p
		font-size 3vw
		@media only screen and (orientation:portrait)
			font-size 5vw
		@media only screen and (orientation:landscape)
			font-size 3vw
		font-family exo
		color: #222
		margin-top: 20px
	img
		width 450px

.loadbar
	@extends .center
	height 10px
	border-radius 5px

.load
	@extends .loadbar
	width 60vw
	margin-top 20px
	background-color rgba(0, 0, 0, 0.1)

.progress
	@extends .loadbar
	width 0vw
	margin-top -10px
	background-color rgba(127, 127, 127, 0.2)

@media only screen and (orientation:portrait){
    #landscape { display:none; }
    #portrait { display:block; }
}
@media only screen and (orientation:landscape){
    #portrait{ display:none; }
    #landscape { display:block; }
}