@import 'helper.styl'
@import 'global.styl'

body, html
	height 100%

.navBl
	color white
	font-family: exo;
	font-size 30px
	i
		font-size 28px
	.head
		float:left
	.tail
		float:right	

.headerIcon
	margin-left 15px

.headerLink, .headerLink:focus, .headerLink:active
	color white

.headerLink:hover
	color #ddd
	trans(0.2s)

#header
	height 50px
	width 100%
	background-color #333
	border-bottom 4px solid #1A65D6
	padding 4px 10px 4px 10px

#content
	height calc(100% - 50px)
	width: 100%

#landscape, #portrait
	height 100%
	width: 100%

.centerbox
	@extends .alCenter
	@extends .yAlign
	@extends .center
	width 75%

#accessText
	font-size 32px
	font-family exo
	color: #222

#playerText
	margin-bottom 30px
	@extends #accessText

.playerSelect {
	margin-left auto
	margin-right auto
	width: 480px
    height: 150px
}

.btnPlayer
	padding-left 5px
	padding-right 5px
	float: left;
	.btn
		width 150px
		height 150px
		border-radius 15px
		font-family exo
		font-size 28px
		border-color #505050
	.btn:hover
		trans(0.2s)
		background-color #EE

.turnDevice
	width 100%
	height 100%
	p
		font-size 3vw
		@media only screen and (orientation:portrait)
			font-size 5vw
		@media only screen and (orientation:landscape)
			font-size 3vw
		font-family exo
		color: #222
		margin-top: 20px
	img
		width 450px

.loadbar
	@extends .center
	height 10px
	border-radius 5px

.load
	@extends .loadbar
	width 60vw
	margin-top 20px
	background-color rgba(0, 0, 0, 0.1)

.progress
	@extends .loadbar
	width 0vw
	margin-top -10px
	background-color rgba(127, 127, 127, 0.2)

@media only screen and (orientation:portrait){
    #landscape { display:none; }
    #portrait { display:block; }
}
@media only screen and (orientation:landscape){
    #portrait{ display:none; }
    #landscape { display:block; }
}